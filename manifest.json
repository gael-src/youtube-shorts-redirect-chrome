{
  "manifest_version": 2,
  "name": "YouTube Shorts Redirect",
  "version": "1.0",
  "description": "Automatically redirects YouTube Shorts URLs to Watch URLs.",
  "permissions": ["activeTab", "storage"],
  "browser_action": {
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}
